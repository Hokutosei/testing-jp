	function importData(id) {
		$.ajax({
                        type: 'POST',
                        url: 'http://202.210.151.55:3000',
			//url: 'http://127.0.0.1:3000',
			data: {'data': id},
                        success: function(data) {
				alert('done!')
                        }
		})
	}

	jQuery(document).ready(function($) {
